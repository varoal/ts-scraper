{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": ["es2017", "dom"],
      "strict": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "sourceMap": true,
      "inlineSources": true,
      "rootDir": "./",
      "baseUrl": "./",
      "preserveSymlinks": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "types": ["mocha", "chai"],
      "paths": {
        "src/*": ["src/*"],
        "@app/*": ["src/app/*"],
        "@components/*": ["src/components/*"]
      }
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts", "./src/**/*.js"]
  }
  